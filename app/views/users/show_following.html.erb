<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.body %>
      </h1>
    </section>
    <% @user ||= current_user %>
    <div class="stats">
      <a href="followings_user_path">
        <strong id="following" class="stat">
          <%= @user.following_users.count %>
        </strong>
        フォロー中
      </a>
      <a href="followers_user_path">
        <strong id="followers" class="stat">
          <%= @user.follower_users.count %>
        </strong>
        フォロワー
      </a>
    </div>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>(<%= @user.microposts.count %>)件の投稿</h3>
    <% end %>
  </div>
</div>