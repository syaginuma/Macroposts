<h1>ユーザー情報の編集</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= gravatar_for @user %>
        <br />
        <br />
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        お名前
        <%= f.text_field :name %>

        メールアドレス
        <%= f.text_field :email %>
        
        自己紹介
        <%= f.text_area :body %>
        
        パスワード
        <%= f.password_field :password %>

        確認のためもう一度入力してください。
        <%= f.password_field :password_confirmation %>
        
        <%= f.submit "変更を保存", class: "btn btn-large btn-primary" %>
　　　　<% end %>
    </div>
</div>