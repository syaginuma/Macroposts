<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.body %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>(<%= @user.microposts.count %>)件の投稿</h3>
      <ol class="microposts">
        <%= render @micropost %>
      </ol>
    <% end %>
  </div>
</div>


