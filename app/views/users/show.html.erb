<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.body %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
    <h3>投稿 (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @micropost %>
    </ol>
    <% end %>
  </div>
</div>
